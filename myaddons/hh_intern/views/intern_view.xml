                                  <label for="day" string="Ngày sinh"/>
                            </td>
                            <td colspan="1" >
                                <div>
                                    <field name="day" style="width: 40px; display: inline-block;background-color: #ffa;" placeholder="Ngày" data-inputmask="'mask': '99'" class="oe_edit_only"/>
                                    <field name="month" style="width: 70px; display: inline-block;background-color: #ffa;" placeholder="Tháng" class="oe_edit_only"/>
