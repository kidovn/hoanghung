    <record id="view_tree_intern" model="ir.ui.view">
        <field name="name">Danh sách thực tập sinh</field>
        <field name="model">intern.intern</field>
        <field name="arch" type="xml">
            <tree >
                <field name="name"/>
                <field name="province"/>
                <field name="date_of_birth"/>
                <field name="avatar" nolabel="1" widget="image" class="oe_right oe_avatar"/>
            </tree>
        </field>
    </record>

    <record id="view_filter_intern" model="ir.ui.view">
        <field name="name">Lọc thực tập sinh</field>
        <field name="model">intern.intern</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="province"/>
            </search>
        </field>
    </record>


    <record id="view_intern_education_info_form" model="ir.ui.view">
        <field name="name">Lý lịch học tập</field>
        <field name="model">intern.education</field>
        <field name="arch" type="xml">
            <form string="Lý lịch học tập">
                <table class="o_group o_inner_group">
                    <tbody>
                        <tr>
                            <td colspan="1" class="o_td_label">
                                 <label for="year_start"/>
                            </td>
                            <td colspan="1" style="width: 100%;">
                                <div class="column">
                                     <field name="month_start" style="width: 10%; display: inline-block" placeholder="Tháng"/>
                                     <field name="year_start" placeholder="Năm" style="width: 20%%; margin-left: 20px"/>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td colspan="1" class="o_td_label">
                                 <label for="year_end"/>
                            </td>
                            <td colspan="1" style="width: 100%;">
                                <div class="column">
                                    <field name="month_end" style="width: 10%; display: inline-block" placeholder="Tháng"/>
                                    <field name="year_end" placeholder="Năm" style="width: 20%%; margin-left: 20px"/>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td colspan="1" class="o_td_label">
                                  <label for="school"/>
                            </td>
                            <td colspan="1" style="width: 100%;">
                                <div class="column">
                                    <field name="school_type" style="width: 20%; display: inline-block"
                                           options="{ 'no_open': True,'no_quick_create':True,'no_create_edit':True}"
                                           context="{'jp': True}"/>
                                    <field name="school" style="width: 20%%; margin-left: 20px"/>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <group>
                    <!--attrs="{'invisible':['|',('school_type', '!=', 'Cao đẳng'),('school_type', '!=', 'Đại học')]}"-->
                    <field name="show_specialization" invisible="1"/>
                    <field name="specialization" attrs="{'invisible':[('show_specialization', '==', False)]}"/>
                    <field name="certificate" style="width: 4cm;" options="{ 'no_open': True,'no_quick_create':True,'no_create_edit':True}" context="{'jp': True}"/>
                    <field name="graduated"/>
                </group>
            </form>
        </field>
    </record>
