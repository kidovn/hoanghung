    <record id="view_tree_promotion" model="ir.ui.view">
        <field name="name">Danh sách tiến cử</field>
        <field name="model">intern.promotion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="invoice"/>
            </tree>
        </field>
    </record>
</odoo>