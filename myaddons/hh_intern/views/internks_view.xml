                                  <label for="syndication"/>
                            </td>
                            <td colspan="1" >
                                <div>
                                    <field name="syndication"  style="width:150px"/>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td colspan="1" width="250px" class="columnDivider">
                                  <label for="place_to_work"/>
                            </td>
                            <td colspan="1" >
                                <div>
                                    <field name="place_to_work"  style="width:150px"/>
                                </div>
                            </td>
                        </tr>

                        <tr >
                            <td colspan="1" width="250px" class="columnDivider">
                                  <label for="day_join_school" string="Ngày nhập học "/>
                            </td>
                            <td colspan="1" >
                                <div>
                                    <field name="day_join_school" style="width: 40px; display: inline-block" placeholder="Ngày" data-inputmask="'mask': '99'" class="oe_edit_only"/>
                                    <field name="month_join_school" style="width: 70px; display: inline-block" placeholder="Tháng" class="oe_edit_only"/>
                                    <field name="year_join_school" style="width:50px" placeholder="Năm" class="oe_edit_only"/>
                                    <field name="date_join_school"  class="oe_read_only"/>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td colspan="1" width="250px" class="columnDivider">
                                  <label for="day_leave" string="Dự kiến xuất cảnh"/>
                            </td>
                            <td colspan="1" >
                                <div>
                                    <field name="day_leave" style="width: 40px; display: inline-block" placeholder="Ngày" data-inputmask="'mask': '99'" class="oe_edit_only" />
                                    <field name="month_leave" style="width: 70px; display: inline-block" placeholder="Tháng" class="oe_edit_only"/>
                                    <field name="year_leave" style="width:50px" placeholder="Năm" class="oe_edit_only"/>
