    <record id="view_tree_internks" model="ir.ui.view">
        <field name="name">Danh sách thực tập sinh</field>
        <field name="model">intern.intern</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="province"/>
                <field name="date_of_birth"/>
                <field name="avatar" nolabel="1" widget="image" class="oe_right oe_avatar"/>
            </tree>
        </field>
    </record>

    <record id="view_filter_internks" model="ir.ui.view">
        <field name="name">Lọc thực tập sinh</field>
        <field name="model">intern.intern</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="province"/>
            </search>
        </field>
    </record>

    <record id="view_promotion_form" model="ir.ui.view">
        <field name="name">Tiến cử</field>
        <field name="model">intern.promotion</field>
        <field name="arch" type="xml">
            <form string="Tiến cử">
                <table class="o_group o_inner_group">
                    <tbody>
